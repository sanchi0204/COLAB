<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="500dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/product_img"
        android:contentDescription="@string/product_img"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        tools:src="@drawable/ic_shopping_bag"/>

    <LinearLayout
        android:layout_below="@+id/product_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_brand_wish">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_brand"
        tools:text="@string/app_name"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/grey"/>

    <com.like.LikeButton
        android:id="@+id/wishlist_ic"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:icon_type="Star"
        app:circle_start_color="@color/grey"
        app:like_drawable="@drawable/ic_fav_border"
        app:dots_primary_color="@color/blue"
        app:dots_secondary_color="@color/blue"
        app:circle_end_color="@color/blue"
        app:icon_size="25dp"
        app:liked="true"
        app:anim_scale_factor="2"
        app:is_enabled="false"
        />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_recommendation"
        android:layout_below="@+id/layout_brand_wish"
        tools:text="@string/app_name"
        android:textAllCaps="false"
        android:textStyle="italic"
        android:textSize="17sp"
        android:textColor="@color/prime"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_price"
        android:layout_below="@+id/product_recommendation"
        tools:text="RS 930"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:theme="@style/Theme.Myntra"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_icons"
        android:layout_below="@id/product_price"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <com.like.LikeButton
            android:id="@+id/like"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:icon_type="Star"
            app:circle_start_color="@color/grey"
            app:like_drawable="@drawable/ic_like"
            app:dots_primary_color="@color/blue"
            app:dots_secondary_color="@color/blue"
            app:circle_end_color="@color/blue"
            app:icon_size="25dp"
            app:liked="true"
            app:anim_scale_factor="2"
            app:is_enabled="false"
            />

        <com.like.LikeButton
            android:id="@+id/dislike"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:icon_type="Star"
            app:circle_start_color="@color/grey"
            app:like_drawable="@drawable/ic_dislike"
            app:dots_primary_color="@color/blue"
            app:dots_secondary_color="@color/blue"
            app:circle_end_color="@color/blue"
            app:icon_size="25dp"
            app:liked="true"
            app:anim_scale_factor="2"
            app:is_enabled="false"
            />

        <com.like.LikeButton
            android:id="@+id/cart_ic"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:icon_type="Star"
            app:circle_start_color="@color/grey"
            app:like_drawable="@drawable/ic_shopping_bag"
            app:dots_primary_color="@color/blue"
            app:dots_secondary_color="@color/blue"
            app:circle_end_color="@color/blue"
            app:icon_size="25dp"
            app:liked="true"
            app:anim_scale_factor="2"
            app:is_enabled="false"
            />

    </LinearLayout>

</RelativeLayout>